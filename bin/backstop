BIN_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &> /dev/null && pwd)
ROOT_DIR=$(dirname "$BIN_DIR")

IMAGE=backstopjs/backstopjs:5.4.4

# Pull the backstopjs image if it doesn't exist yet.
docker image inspect $IMAGE -f "{{.Id}}" >/dev/null 2>&1 || docker pull $IMAGE

# Run the backstopjs command.
docker run --rm -it --mount type=bind,source="$ROOT_DIR",target="/src" $IMAGE $1 --config=/src/tests/backstop/config.js
